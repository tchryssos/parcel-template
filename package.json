{
  "name": "parcel-template",
  "version": "1.2.0",
  "description": "A basic parcel project",
  "source": "src/index.html",
  "scripts": {
    "dev": "parcel",
    "build": "parcel build --public-url ./",
    "prod": "yarn build && npx http-server dist -p 1235 --proxy http://localhost:1235?",
    "deploy": "rm -rf dist && yarn build && git push origin `git subtree split --prefix dist main`:gh-pages --force",
    "deploy:only_first": "rm -rf node_modules && yarn && git checkout -b gh-pages && git push --set-upstream origin gh-pages && yarn deploy && git checkout main"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "parcel": "^2.0.0",
    "postcss": "^8.2.6",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
