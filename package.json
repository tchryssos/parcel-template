{
	"name": "parcel-template",
	"version": "1.2.0",
	"description": "A basic parcel project",
	"scripts": {
		"dev": "parcel index.html",
		"build": "parcel build index.html --public-url ./",
		"prod": "npm run build && npx http-server dist -p 1235 --proxy http://localhost:1235?",
		"deploy": "rm -rf dist && npm run build && git push origin `git subtree split --prefix dist main`:gh-pages --force",
		"deploy:only_first": "rm -rf node_modules && npm install && git checkout -b gh-pages && git push --set-upstream origin gh-pages && npm run deploy && git checkout main"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"devDependencies": {
		"@parcel/optimizer-cssnano": "^2.0.0",
		"@parcel/optimizer-htmlnano": "^2.0.0",
		"@parcel/packager-css": "^2.0.0",
		"@parcel/packager-html": "^2.0.0",
		"@parcel/transformer-css": "^2.0.0",
		"@parcel/transformer-html": "^2.0.0",
		"@parcel/transformer-postcss": "^2.0.0",
		"@parcel/transformer-posthtml": "^2.0.0",
		"@tsconfig/recommended": "^1.0.1",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^7.21.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": "^7.0.2",
		"lint-staged": "^11.2.3",
		"parcel": "^2.0.0",
		"postcss": "^8.2.6",
		"typescript": "^4.4.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,md}": [
			"prettier --write"
		],
		"*.{ts,tsx}": [
			"eslint --fix"
		]
	}
}
